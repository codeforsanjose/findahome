<div class="ui container">
  <div class="ui segment">
    <b> Affordable Housing </b>
    <table class="ui definition table">
        <tr>
            <td class="one wide column">
                <div class="ui label">Rent:</div>
            </td>
            <td>
                {{range-slider
                  defaultValue='500,1500'
                  value='500,1500'
                  min=1
                  max=5000
                  step=1
                  tooltip='hide'
                }}
            </td>
        </tr>
    </table>

    <h4 class="ui horizontal divider header">
        <i class="tag icon"></i>
        Affordable Housing Units
    </h4>

    <article class="listing-card">
      {{#each model as |listing|}}
        <h3> Name: {{listing.propertyName}}</h3>
        <p> Address: {{listing.propertyAddress}}</p>
        <p> Type: {{listing.propertyType}}</p>
      {{/each}}
    </article>

  </div>
</div>
